<table id="Championship"></table>
<div id="ChampionshipPager"></div>

<link href="~/Content/themes/base/minified/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />

@section scripts{
    <script src="~/Scripts/i18n/grid.locale-en.js"></script>
    <script src="~/Scripts/jquery.jqGrid.js"></script>

    <script>
        $(function () {
            $grid = $("#Championship").jqGrid({
                url: '@Url.Action("MainPage", "Box")',
                mtype: 'Get',
                dataType: 'json',
                colModel: [
                { label: 'Date', name: 'Date', width: 30 },
                { label: 'AmountRounds', index: 'AmountRounds' },
                { label: 'Winner', index: 'Winner' },
                { label: 'Loser', index: 'Loser' },
                ],
                loadonce: true
            });
        });
    </script>

}
